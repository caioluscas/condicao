
	/*	Name: Caio Lucas Lima Almeida 
		Date: 27/03/21 
		Description: Faça um Programa que leia um número e exiba o dia correspondente da semana. (1-Domingo, 
2- Segunda, etc.), se digitar outro valor deve aparecer valor inválido.
	
	*/
	#include<stdio.h>
	#include<locale.h>
	
		main()
		{ 
			int n1;
			setlocale(LC_ALL,"portuguese");
			printf("Digite seu número:");
			scanf("%d",&n1);
			if(n1==1)
			{printf("Domingo");
			}
			else
			if(n1==2)
			{printf("Segunda");
			}
			else
			if(n1==3)
			{printf("Terça");
			}
			else
			if(n1==3)
			{printf("Quarta");
			}
			else
			if(n1==4)
			{printf("Quinta");
			}
			else
			if(n1==5)
			{printf("Sexta");
			}
			else
			if(n1==6)
			{printf("Sábado");
			}
			else
			{printf("Inválido");
			}
		}
			
