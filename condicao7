#include<stdio.h>
#include<locale.h>

	main()
	{
		float n1,n2,n3;
		setlocale(LC_ALL,"portuguese");
			printf("diga o primeiro número: ");
		scanf("%f",&n1);
			printf("diga o segundo número: ");
		scanf("%f",&n2);
				printf("diga o terceiro número: ");
		scanf("%f",&n3);
			if(n1>n2 && n1>n3 && n2>n3)
		{printf("%.2f,%.2f,%.2f",n1,n2,n3);
		}
		else
			if(n1>n2 && n1>n3 && n3>n2)
		{printf("%.2f,%.2f,%.2f",n1,n3,n2);
	}
		else
			if(n2>n1 && n2>n3 && n1>n3)
		{printf("%.2f,%.2f,%.2f",n2,n1,n3);
		}
			else
			if(n2>n1 && n2>n3 && n3>n1)
		{printf("%.2f,%.2f,%.2f",n2,n3,n1);
		}
			else
			if(n3>n1 && n3>n2 && n1>n2)
		{printf("%.2f,%.2f,%.2f",n3,n1,n2);
		}
			else
			if(n3>n1 && n3>n2 && n2>n1)
		{printf("%.2f,%.2f,%.2f",n3,n2,n1);
		}
		
		}	
